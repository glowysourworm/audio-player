<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:CompileBindings="False"
             x:Class="AudioPlayer.ConfigurationView">

	<!-- Library Configuration -->
	<Grid Grid.RowDefinitions="36,*" Grid.ColumnDefinitions="Auto, *, Auto">

		<!-- Label Column -->
		<TextBlock Text="Directory" VerticalAlignment="Center" Margin="10, 0, 10, 0" />

		<!-- Input Column -->
		<TextBox Text="{Binding LibraryConfiguration.DirectoryBase}" Focusable="False" VerticalContentAlignment="Center" IsReadOnly="True" Grid.Column="1" Margin="0,5" />

		<!-- Button Column -->
		<Button Content="..." Grid.Column="2" Command="{Binding LibraryConfiguration.OpenLibraryFileCommand}" Cursor="Hand" Margin="10,5" />
		
	</Grid>
	
</UserControl>
